<section class="register">
  <h3>Register</h3>
  <%= form_for @user, url: "/register" do |f| %>
    <div class="form-group">
      First Name: <%= f.text_field :first_name, placeholder: "Enter First Name" %>
    </div>
    <div class="form-group">
      Last Name: <%= f.text_field :last_name, placeholder: "Enter Last Name" %>
    </div>
    <div class="form-group">
      Email: <%= f.text_field :email, placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      Password: <%= f.password_field :password, placeholder: "Enter Password" %>
    </div>
    <%= f.submit "Register" %>
  <% end %>
</section>
